{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "autoupdate": true,
  "username": "thomasmol",
  "autoshare": false,
  "mcp": {
    "directus": {
      "type": "local",
      "command": ["bun", "x", "@directus/content-mcp@latest"],
      "enabled": false,
      "environment": {
        "DIRECTUS_URL": "https://directus.audiogest.app",
        "DIRECTUS_TOKEN": "${env:DIRECTUS_TOKEN}"
      }
    },
    "linear": {
      "type": "local",
      "command": ["bun", "x", "-y", "mcp-remote", "https://mcp.linear.app/sse"],
      "enabled": false
    },
    "svelte": {
      "type": "local",
      "command": ["bun", "x", "-y", "@sveltejs/mcp@latest"],
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": ["bun", "x", "@playwright/mcp@latest"],
      "enabled": false
    }
  },
  "tui":{
    "scroll_speed": 2,
    "scroll_acceleration": {
      "enabled": true
    }
  }
}
