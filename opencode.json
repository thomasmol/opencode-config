{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "autoupdate": true,
  "username": "thomasmol",
  "autoshare": false,
  "permission": {
    "bash": {
      "rm *": "ask",
      "mv */.*": "ask",
      "prisma *": "ask",
      "drizzle* *": "ask",
      "npx prisma *": "ask",
      "bunx prisma *": "ask",
      "npm run prisma*": "ask",
      "npm run drizzle*": "ask",
      "docker *": "ask",
      "kubectl *": "ask",
      "git push*": "ask",
      "gh pr merge*": "ask",
      "gh pr ready*": "ask",
      "gh pr close*": "ask",
      "gh issue close*": "ask",
      "gh issue delete*": "ask",
      "gh repo delete*": "ask",
      "aws *": "ask",
      "gcloud *": "ask",
      "az *": "ask",
    }
  },
  "mcp": {
    "directus": {
      "type": "local",
      "command": ["bun", "x", "@directus/content-mcp@latest"],
      "enabled": false,
      "environment": {
        "DIRECTUS_URL": "https://directus.audiogest.app",
        "DIRECTUS_TOKEN": "${env:DIRECTUS_TOKEN}"
      }
    },
    "linear": {
      "type": "local",
      "command": ["bun", "x", "-y", "mcp-remote", "https://mcp.linear.app/sse"],
      "enabled": false
    },
    "svelte": {
      "type": "local",
      "command": ["bun", "x", "-y", "@sveltejs/mcp@latest"],
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": ["bun", "x", "@playwright/mcp@latest"],
      "enabled": false
    }
  },
  "tui":{
    "scroll_speed": 2,
    "scroll_acceleration": {
      "enabled": true
    }
  }
}
